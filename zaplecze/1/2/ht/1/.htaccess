### PROTECT FILES ###
<FilesMatch "\.(htaccess|htpasswd|ini|fla|psd|log|sh)$">
Order Allow,Deny
Deny from all
</FilesMatch>

<ifModule mod_gzip.c>
mod_gzip_on Yes
mod_gzip_dechunk Yes
mod_gzip_item_include file .(html?|txt|css|js|php|pl)$
mod_gzip_item_include handler ^cgi-script$
mod_gzip_item_include mime ^text/.*
mod_gzip_item_include mime ^application/x-javascript.*
mod_gzip_item_exclude mime ^image/.*
mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</ifModule>

<IfModule mod_headers.c>
	Header set X-XSS-Protection "1; mode=block"
	Header always append X-Frame-Options SAMEORIGIN
	Header set X-Content-Type-Options nosniff
</IfModule>

Options FollowSymLinks
RewriteEngine on
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-l
DirectoryIndex index.php
RewriteRule (.+)/$ /$1 [L,R=301,NC]
RewriteRule /blog/kategorie/ /blog/strona-glowna [L,R=301,NC]
RewriteRule strona-glowna index.php [NC]
RewriteRule ^szukaj$ search.php [NC]
RewriteRule ^zaplecze$ /zaplecze/index.php [NC]
RewriteRule ^([0-9]+)$ kategoria.php?kat=$1 [NC]
RewriteRule ^([0-9]+)/([A-Za-z0-9-_]+)$ kategoria.php?kat=$1 [NC]
RewriteRule ^([0-9]+)/([A-Za-z0-9-_]+)/([0-9]+)$ article.php?id=$3&kat=$1 [NC]
RewriteRule ^([0-9]+)/([A-Za-z0-9-_]+)/([0-9]+)/([a-z0-9\-]+)$ article.php?id=$3&kat=$1 [NC]
#RewriteRule ^szukaj/([A-Za-z0-9-_]+)/$ search.php?search=$1 [NC]
